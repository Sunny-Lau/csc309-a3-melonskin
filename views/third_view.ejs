<!DOCTYPE html>
<html>
   <head>
      <style>
         @media #screen and (min-width: 1000px) {
         /*body {
         background-color: lightgreen;
         }*/
         }
      </style>
      <title>Place searches</title>
      <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
      <meta charset="utf-8">
      <!-- Latest compiled and minified CSS -->
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
      <!-- jQuery library -->
      <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>  
      <!-- Latest compiled JavaScript -->
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
      <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBIoXZqb6UZnfYX9_KalDVjxFnjS8VeSRQ&libraries=places" async defer></script>
      <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
      <!-- <script src="/map_script.js"></script> -->
      <link rel="stylesheet" href="/mystyle.css">
      <style>
         .bar-1 {width: <%=bar[0]%>%;}
         .bar-2 {width: <%=bar[1]%>%;}
         .bar-3 {width: <%=bar[2]%>%;}
         .bar-4 {width: <%=bar[3]%>%;}
         .bar-5 {width: <%=bar[4]%>%;}
      </style>
   </head>
   <body>
      <% include ./partials/navbar %>
 <div id="container2">
      <div id="place_img" class="img">
         <img src= <%= photo %>>
      </div>
      <div id="info">
         <div data-spy="scroll" data-target=".navbar" data-offset="50px">
            <nav class="navbar navbar-inverse navbar-fixed-bottom">
               <div class="container-fluid">
                  <div class="navbar-header">
                     <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNav">
                     <span class="icon-bar"></span>
                     <span class="icon-bar"></span>
                     </button>
                  </div>
                  <div>
                     <div class="collapse navbar-collapse" id="myNav">
                        <ul class="nav navbar-nav">
                           <li ><a href="#Description">Description</a></li>
                           <li><a href="#Review">Review</a></li>
                           <li ><a href="#userInput">Your opinin</a></li>
                        </ul>
                     </div>
                  </div>
               </div>
            </nav>
            <div id="Description" class="container-fluid">
               <h1>Description</h1>
               <div id="Description-detail">
                  <p>Name: <%= name%></p>
                  <p>Address: <%= address%></p>
                  <p>Wesite: <%= website%></p>
                  <p>Postal Code: <%= postal%></p>
               </div>
            </div>
            <div id="Review" class="container-fluid">
               <h1>Review</h1>
               <div id="Review-detail">
                  <% for (let userID in REVIEWS) { %>
                  <div class="media">
                     <div class='media-left'>
                        <img src='/profile.png' class='media-object' style='width:60px'>
                     </div>
                     <div class='media-body'><h4 class='media-heading'><%= REVIEWS[userID].userID %></h4>
                     <p><%= REVIEWS[userID].reviews %></p>
                     </div>


                  </div>
                   <% } %>
               </div>

               <div class="panel-group" id="accordion">
                  <div class="panel panel-default">
                     <div class="panel-heading">
                        <div class="panel-title">
                           <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">Overall Rating</a>
                           <h2 id="avgrate"><%= avg%></h2>
                        </div>
                     </div>
                     <div id="collapse1" class="panel-collapse collapse in">
                        <div class="panel-body">
                     
                           <div class="row">
                              <div class="side">
                                 <div>Excellent</div>
                              </div>
                              <div class="middle">
                                 <div class="bar-container">
                                    <div class="bar-5"></div>
                                 </div>
                              </div>
                              <div class="side right">
                                 <div id="rate5"><%= rate[4] %></div>
                              </div>
                              <div class="side">
                                 <div>Good</div>
                              </div>
                              <div class="middle">
                                 <div class="bar-container">
                                    <div class="bar-4"></div>
                                 </div>
                              </div>
                              <div class="side right">
                                 <div id="rate4"><%= rate[3] %></div>
                              </div>
                              <div class="side">
                                 <div>Average</div>
                              </div>
                              <div class="middle">
                                 <div class="bar-container">
                                    <div class="bar-3"></div>
                                 </div>
                              </div>
                              <div class="side right">
                                 <div id="rate3"><%= rate[2] %></div>
                              </div>
                              <div class="side">
                                 <div>Bad</div>
                              </div>
                              <div class="middle">
                                 <div class="bar-container">
                                    <div class="bar-2"></div>
                                 </div>
                              </div>
                              <div class="side right">
                                 <div id="rate2"><%= rate[1] %></div>
                              </div>
                              <div class="side">
                                 <div>Very bad</div>
                              </div>
                              <div class="middle">
                                 <div class="bar-container">
                                    <div class="bar-1"></div>
                                 </div>
                              </div>
                              <div class="side right">
                                 <div id="rate1"><%= rate[0] %></div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <div id="userInput" class="container-fluid">
            <h1>Your opinion</h1>
            <form action="/detail/<%= placeid %>/comment" method="POST">
               <div class="form-group">
                  <label for="comment">Comment:</label>
                  <textarea class="form-control" name="reviews" type="text" rows="5" id="comment" placeholder="What do you think"></textarea>
                  <br>
                  <h2>Overall rating</h2>


            <form>
            <label class="radio-inline">
            <input type="radio" name="rate" value="1">Very bad
            </label>
            <label class="radio-inline">
            <input type="radio" name="rate" value="2">Bad
            </label>
            <label class="radio-inline">
            <input type="radio" name="rate" value="3">Average
            </label>
            <label class="radio-inline">
            <input type="radio" name="rate" value="4">Good
            </label>
            <label class="radio-inline">
            <input type="radio" name="rate" value="5">Excellent
            </label>
            </form>
            <br>
            <button type="submit" class="btn btn-default">Submit</button>
            </div>
            </form>
         </div>
      </div>
   </div>
   </body>
</html>